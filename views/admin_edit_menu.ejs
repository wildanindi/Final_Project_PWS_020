<%- include('partials/header') %>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card p-4 shadow-sm">
            <h3 class="fw-bold mb-4">✏️ Edit Menu</h3>
            
            <form action="/admin/update/<%= menu.id %>" method="POST">
                
                <div class="mb-3">
                    <label class="form-label">Nama Menu</label>
                    <input type="text" name="nama_menu" class="form-control" value="<%= menu.nama_menu %>" required>
                </div>

                <div class="mb-3">
                    <label class="form-label">Kategori</label>
                    <select name="category_id" class="form-select" required>
                        <% categories.forEach(cat => { %>
                            <option value="<%= cat.id %>" <%= menu.category_id === cat.id ? 'selected' : '' %>>
                                <%= cat.nama_kategori %>
                            </option>
                        <% }) %>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">Harga</label>
                    <input type="number" name="harga" class="form-control" value="<%= menu.harga %>" required>
                </div>

                <div class="mb-3">
                    <label class="form-label">Deskripsi</label>
                    <textarea name="deskripsi" class="form-control" rows="3"><%= menu.deskripsi %></textarea>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-success w-100">Simpan Perubahan</button>
                    <a href="/admin/dashboard" class="btn btn-outline-secondary w-100">Batal</a>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('partials/footer') %>