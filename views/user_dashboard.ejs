<%- include('partials/header') %>

<div class="d-flex justify-content-between align-items-center mb-5 bg-white p-4 rounded shadow-sm">
    <div>
        <h2 class="fw-bold mb-0">ğŸ‘¤ User Dashboard</h2>
        <p class="text-muted mb-0">Halo, <strong><%= user.username %></strong>!</p>
    </div>
    <div class="text-end">
        <span class="badge rounded-pill px-3 py-2 mb-2 <%= user.payment_status === 'paid' ? 'bg-success' : 'bg-warning text-dark' %>">
            Status: <%= user.payment_status === 'paid' ? 'PREMIUM' : 'FREE' %>
        </span>
        <br>
        <a href="/auth/logout" class="btn btn-sm btn-outline-danger">Keluar Aplikasi</a>
    </div>
</div>

<% if (error) { %>
    <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
        <strong>âš ï¸ Waduh!</strong> <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<div class="row g-4">
    
    <% if (user.payment_status === 'unpaid') { %>
        <div class="col-12">
            <div class="card py-5 text-center border-warning border-2 shadow-sm">
                <div class="card-body">
                    <div style="font-size: 4rem;">ğŸ”’</div>
                    <h2 class="fw-bold mt-3">Fitur Terkunci</h2>
                    <p class="text-muted fs-5">Kamu harus menjadi member Premium untuk mengakses API Key dan Menu.</p>
                    
                    <div class="card bg-light border-0 d-inline-block p-4 my-3 rounded-4">
                        <h4 class="fw-bold text-dark">ğŸ’ Paket Sultan</h4>
                        <h2 class="text-success fw-bold">Rp 50.000</h2>
                        <p class="mb-0 text-muted">Akses seumur hidup</p>
                    </div>

                    <form action="/user/pay" method="POST" class="mt-3">
                        <button type="submit" class="btn btn-warning btn-lg px-5 py-3 fw-bold rounded-pill shadow-sm hover-effect" onclick="return confirm('Simulasi Bayar: Yakin?')">
                            ğŸš€ Bayar & Buka Akses
                        </button>
                    </form>
                </div>
            </div>
        </div>

    <% } else { %>
        <div class="col-md-6">
            <div class="card p-4 h-100 border-0 shadow-sm position-relative overflow-hidden">
                <div class="position-absolute top-0 end-0 p-3 opacity-25">
                    <i class="bi bi-key" style="font-size: 5rem;"></i>
                </div>
                <h4 class="fw-bold text-primary">Langkah 1: API Key Anda</h4>
                <p class="text-muted">Key ini dibuat otomatis saat Login. Anda juga bisa mengacaknya ulang secara manual.</p>
                
                <div class="alert alert-primary text-center fw-bold font-monospace py-3 my-3 text-break shadow-sm">
                    <%= user.api_key ? user.api_key : '--- Error: Key Hilang ---' %>
                </div>

                <form action="/user/generate-key" method="POST" class="mt-auto">
                    <button type="submit" class="btn btn-primary w-100 py-2 fw-bold" onclick="return confirm('Yakin ingin mengganti API Key? Key yang lama tidak akan bisa dipakai lagi.')">
                        ğŸ”„ Acak Ulang API Key (Manual)
                    </button>
                </form>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card p-4 h-100 border-0 shadow-sm">
                <h4 class="fw-bold text-success">Langkah 2: Validasi</h4>
                <p class="text-muted">Copy key disamping, lalu paste disini untuk membuka menu.</p>

                <form action="/user/validate-key" method="POST" class="mt-4">
                    <div class="input-group input-group-lg mb-3">
                        <input type="text" name="input_key" class="form-control bg-light" placeholder="Paste Key disini..." required>
                    </div>
                    <button type="submit" class="btn btn-success w-100 py-3 fw-bold shadow-sm">
                        ğŸ”“ Buka Daftar Menu
                    </button>
                </form>
            </div>
        </div>
    <% } %>

</div>

<%- include('partials/footer') %>